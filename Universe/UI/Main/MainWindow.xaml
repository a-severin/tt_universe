<Window
    x:Class="Universe.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:listPlanets="clr-namespace:Universe.UI.ListPlanets"
    xmlns:local="clr-namespace:Universe"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance d:Type=local:MainViewModel}"
    Icon="../../universe.ico"
    mc:Ignorable="d">
    <Grid>
        <listPlanets:ListPlanetsControl DataContext="{Binding Path=ListPlanetsViewModel}" />
    </Grid>
</Window>
