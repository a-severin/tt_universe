<UserControl
    x:Class="Universe.UI.ListPlanets.ListPlanetsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Universe.UI.ListPlanets"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance d:Type=local:ListPlanetsViewModel}"
    mc:Ignorable="d">
    <DockPanel>
        <ToolBar
            Height="32"
            DockPanel.Dock="Top">
            <Button
                Content="{iconPacks:Material Plus}"
                ToolTip="Add" />

            <Button
                Content="{iconPacks:Material Check}"
                ToolTip="Apply" />

        </ToolBar>
        <Grid>
            <ListView ItemsSource="{Binding Path=PlanetPresenters}">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="local:PlanetPresenter">
                        <TextBlock
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding Path=Text}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </DockPanel>

</UserControl>
