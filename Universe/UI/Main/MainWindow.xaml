<mah:MetroWindow
    x:Class="Universe.UI.Main.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:listPlanets="clr-namespace:Universe.UI.ListPlanets"
    xmlns:listProperties="clr-namespace:Universe.UI.ListProperties"
    xmlns:local="clr-namespace:Universe"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:main="clr-namespace:Universe.UI.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Universe"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance d:Type=main:MainViewModel}"
    Icon="../../universe.ico"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Planets">
            <listPlanets:ListPlanetsControl DataContext="{Binding Path=ListPlanetsViewModel}" />
        </TabItem>
        <TabItem Header="Properties">
            <listProperties:ListPropertiesControl DataContext="{Binding Path=ListPropertiesViewModel}" />
        </TabItem>
    </TabControl>
</mah:MetroWindow>
